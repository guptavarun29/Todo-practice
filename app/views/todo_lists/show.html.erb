<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @todo_list.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @todo_list.description %>
</p>

<hr />

<div id="todo_items_wrapper">
  <ul>
    <% @todo_list.todo_items.each do |t| %>
      <li>
        <%= t.content %>
      </li>
    <% end %>
  </ul>
	<%= render "todo_items/form"%>
</div>
<%= link_to 'Edit', edit_todo_list_path(@todo_list) %> |
